<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.ChangeBackground">


    <TextView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/red_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="backgroundChosen"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/dark_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/red_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="backgroundChosen"
        tools:ignore="OnClick"/>

    <ImageView
        android:id="@+id/colorful_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/dark_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="backgroundChosen"
        tools:ignore="OnClick"/>

    <ImageView
        android:id="@+id/white"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/colorful_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="backgroundChosen"
        tools:ignore="OnClick"/>

</RelativeLayout>